# Automatically adapt to window size changes
termcapinfo xterm* 'hs:ts=\E]0;:fs=\007:ds=\E]0;\007'
defflow auto

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# ğŸ–±ï¸ Use native terminal scroll (disable alternate screen buffer)
termcapinfo xterm* ti@:te@

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# ğŸ§  Scrollback history size
defscrollback 32767  # max buffer

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# â›” Disable annoying startup message
startup_message off

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# ğŸ”• Silence the visual bell
vbell off

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# ğŸªª Show shell title (for nested shell clarity)
shelltitle "$ | bash"

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# ğŸ•’ Dynamic time update (every 1 second)
backtick 1 1 1 date '+%Y-%m-%d %H:%M:%S'

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# ğŸ§­ Dynamic status line (bottom)
hardstatus on
hardstatus alwayslastline
hardstatus string "%{= kB}%H %{= kw}[%= %{= kR}%l%{= kw} | %{= kC}%1`%{= kw} %=%{= kW}%n %t%{-}]"

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# âŒ¨ï¸ Key Bindings â€“ Vim-style navigation for copy mode
# (Use ^A-Esc to enter, then vi keys)
bindkey -m ^[[A stuff "k"  # Up
bindkey -m ^[[B stuff "j"  # Down
bindkey -m ^[[C stuff "l"  # Right
bindkey -m ^[[D stuff "h"  # Left

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# ğŸ§¬ UTF-8 support for modern systems
defutf8 on

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# ğŸ”Œ Session customization (optional default name)
# sessionname devhub

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# ğŸ› Custom key bindings
# Detach using F12
